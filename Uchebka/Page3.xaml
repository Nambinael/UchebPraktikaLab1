<Page x:Class="Uchebka.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <StackPanel>
        <DataGrid x:Name="SecondTable" Grid.Row="1" Grid.ColumnSpan="3" SelectionChanged="SecondTable_SelectionChanged"/>
        <TextBlock Text="Напиток" HorizontalAlignment="Center"/>
        <TextBox  x:Name="DrinkNameBox" HorizontalAlignment="Center"/>
        <Button Content="Сохранить запись" Click="Button_Click" />
        <Button Content="Удалить запись" Click="Button_Click_1"/>
        <Button Content="Изменить запись" Click="Button_Click_2"/>
    </StackPanel>
</Page>
