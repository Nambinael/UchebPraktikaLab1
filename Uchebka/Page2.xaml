<Page x:Class="Uchebka.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uchebka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <StackPanel>
        <DataGrid x:Name="FirstTable" Grid.Row="1" Grid.ColumnSpan="3" />
        <TextBlock Text="Имя" HorizontalAlignment="Center"/>
        <TextBox  x:Name="NaaameBox" HorizontalAlignment="Center"/>
        <TextBlock Text="Id напитка" HorizontalAlignment="Center"/>
        <ComboBox  x:Name="FavDrinkIdBox" HorizontalAlignment="Center"/>
        <TextBlock Text="Id Возраста" HorizontalAlignment="Center"/>
        <ComboBox x:Name="AgeGroupIdBox" HorizontalAlignment="Center"/>
        <Button Content="Соранить запись" Click="Button_Click"/>
    </StackPanel>
</Page>
